{
  "name": "bookadmin",
  "description": "REST microservice for koa2-app-service",
  "license": "MIT",
  "version": "0.0.1",
  "main": "index.js",
  "dependencies": {
    "babel-eslint": "^6.1.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "forever": "^0.15.2",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.2.0",
    "koa-cluster": "^0.2.2",
    "koa-compress": "^2.0.0",
    "koa-cors": "0.0.16",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^2.0.0",
    "koa-router": "^7.0.1",
    "mongoose": "^4.9.8"
  },
  "devDependencies": {
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2",
    "chai": "^3.5.0",
    "mocha": "^2.5.3",
    "supertest": "^1.2.0",
    "npm-watch": "^0.1.4"
  },
  "engines": {
    "node": "~5.4.1"
  },
  "scripts": {
    "start": "node index.js",
    "serve": "node index.js",
    "cluster": "koa-cluster index.js",
    "forever": "forever start index.js",
    "forever:cluster": "forever start koa-cluster index.js",
    "test": "mocha --compilers js:babel-register --recursive",
    "test:watch": "mocha --compilers js:babel-register --recursive --watch",
    "watch": "npm-watch",
    "lint": "eslint src test"
  },
  "watch": {
    "serve": {
      "patterns": [
        "src"
      ],
      "extensions": "js",
      "quiet": "true"
    }
  },
  "eslintConfig": {
    "env": {
      "mocha": true
    },
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
      "strict": 0,
      "no-param-reassign": 0,
      "no-console": 0,
      "prefer-const": 0,
      "comma-dangle": 0,
      "no-use-before-define": 0,
      "no-underscore-dangle": 0
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports",
      "transform-runtime"
    ]
  }
}
